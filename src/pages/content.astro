    font-family: 'Lora Variable', sans-serif;
    text-transform: uppercase;
}
.main-header {
    width: 100%;

    display: flex;
    flex-flow: column nowrap;
    align-items: center;
    justify-content: center;

    font-family: 'Lora Variable', sans-serif;

    ul {
