        }
    }
}
.exp-header {
    display: flex;
    flex-flow: row nowrap;
    align-items: center;
    justify-content: space-between;

    & div {
        display: flex;
        flex-flow: row wrap;
        align-items: baseline;
        justify-content: center;

        & h3 {
            margin: 0 0.5rem 0 0;
        }
    }
}
.exp-list {
    list-style: disc;

    font-weight: 300;

    & li {
        margin: 0.25rem 0 0 1rem;
    }
}
.proj-section {
    & ul {
        & li {
            margin: 0.25rem 0 0 0;
        }
    }
}
.edu-section {
    display: flex;
    flex-flow: row wrap;
    align-items: baseline;
    justify-content: space-between;

